{
  "printWidth": 100,
  "tabWidth": 4,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",

  "overrides": [
    {
      "files": "README.md",
      "options": {
        "proseWrap": "never"
      }
    },
    {
      "files": ["*.json", ".yml", ".yaml", ".prettierrc"],
      "options": {
        "tabWidth": 2,
        "useTabs": false
      }
    }
  ]
}
